<%= form_tag quiz_submission_index_path do %>
  <header class="quiz-header">
    <h2>Quiz</h2>
  </header>
  <div class="questions">
    <% unit.questions.shuffle.each_with_index do |question, question_index| %>
      <fieldset class="question <%= incorrect_questions.include? question.id ? 'incorrect' : '' %>">
        <legend>
          <div class="legend">
            <span class="question-number"><%= question_index + 1 %></span>
            <span class="question-text"><%= question.question_text %></span>
          </div>
        </legend>
        <div class="answers">
          <% question.answers.each_with_index do |answer, answer_index| %>
            <div class="radio-button" onclick="document.getElementById('<%= "quiz_submission_#{question.id}_#{answer_index}" %>').checked = true;">
              <%= radio_button_tag "quiz_submission[#{question.id}]", answer_index, submitted_answers && submitted_answers.key?(question.id) && submitted_answers[question.id] == answer_index %>
              <label for="<%= question.id %>_<%= answer_index %>">
                <span class="answer-label">
                  <span class="answer-icon"><%= ["A", "B", "C", "D"][answer_index] %></span>
                  <span class="answer-text">
                    <%= answer["text"] %>
                  </span>
                </span>
              </label>
            </div>
          <% end %>
        </div>
      </fieldset>
    <% end %>
  </div>
  <footer class="quiz-footer">
    <div class="quiz-footer-container">
      <%= hidden_field :unit, :id %>
      <%= button_tag "Submit Answers" %>
    </div>
  </footer>
<% end %>
